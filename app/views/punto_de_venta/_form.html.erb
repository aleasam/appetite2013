<%= simple_form_for(@punto_de_ventum) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id_restaurante %>
    <%= f.input :telefono %>
    <%= f.input :direccion %>
    <%= f.input :latitud %>
    <%= f.input :longitud %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Crear Restaurante", :class => 'btn-primary' %>
    
      <%= link_to("cancelar", root_path, :data => { :confirm => "No se guardaran datos" }, :class => 'btn btn-inverse') %>
    
  </div>
<% end %>
