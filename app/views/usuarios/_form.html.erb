<%= simple_form_for(@usuario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre_completo %>
    <%= f.input :nombre_usuario %>
    <%= f.input :correo %>
    <%= f.input :password %>
    <%= f.input :twitter %>
    <%= f.input :ciudad %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
